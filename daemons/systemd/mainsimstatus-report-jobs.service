[Unit]
Description=MainSimStatus Jobs Reporter
After=syslog.target network.target slurmctld.service
ConditionFileIsExecutable=/opt/mainsimstatus/daemons/mainsim-daemon.sh

[Service]
ExecStart=/opt/mainsimstatus/daemons/mainsim-daemon.sh jobs /opt/mainsimstatus/secret.conf

Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target

